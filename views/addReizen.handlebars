<form class="reizen" action="profiel/reizen" method="POST">
	<label>Kies hier jouw continent:</label>
	<div>
		{{#each continenten}}
			<label>{{this}}</label>
		{{/each}}
	</div>

	<div>
		<label>Kies hier de landen waar je heen wilt:</label>
		<div>
			{{#each landen}}
				{{#if (equals this.continent 'AF')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'AN')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'AS')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'EU')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'NA')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'OC')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>

		<div>
			{{#each landen}}
				{{#if (equals this.continent 'SA')}}
					<label><input type="checkbox" id="{{this.name}}" name="{{this.name}}">{{this.name}}</label>
				{{/if}}
			{{/each}}
		</div>
	</div>

	<div>
      <img src="images/pijl-vorige.png" alt="Vorige pagina">
      <button><img src="images/pijl-volgende.png" alt="Volgende pagina"></button>
   </div>

</form>

